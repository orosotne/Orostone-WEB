# ===========================================
# Nginx configuration for Orostone MPA Setup
# ===========================================
# 
# This configuration supports the Multi-Page Application architecture:
# - www.orostone.sk  -> Main website (index.html)
# - eshop.orostone.sk -> E-shop application (eshop.html)
#
# Copy this to your nginx config and adjust paths as needed.

# ===========================================
# WWW.OROSTONE.SK - Main Website
# ===========================================
server {
    listen 80;
    server_name www.orostone.sk orostone.sk;
    
    root /var/www/orostone/dist;
    index index.html;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml application/javascript application/json;

    # Cache static assets (JS, CSS, images, fonts)
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # Redirect /shop to eshop subdomain
    location = /shop {
        return 301 https://eshop.orostone.sk/;
    }

    # SPA fallback - all routes serve index.html
    location / {
        try_files $uri $uri/ /index.html;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}

# ===========================================
# ESHOP.OROSTONE.SK - E-shop Application
# ===========================================
server {
    listen 80;
    server_name eshop.orostone.sk;
    
    root /var/www/orostone/dist;
    index eshop.html;

    # Gzip compression
    gzip on;
    gzip_vary on;
    gzip_min_length 1024;
    gzip_proxied expired no-cache no-store private auth;
    gzip_types text/plain text/css text/xml text/javascript application/x-javascript application/xml application/javascript application/json;

    # Cache static assets
    location ~* \.(js|css|png|jpg|jpeg|gif|ico|svg|woff|woff2|ttf|eot|webp)$ {
        expires 1y;
        add_header Cache-Control "public, immutable";
    }

    # SPA fallback - all routes serve eshop.html
    location / {
        try_files $uri $uri/ /eshop.html;
    }

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "strict-origin-when-cross-origin" always;
}

